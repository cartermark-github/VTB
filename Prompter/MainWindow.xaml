        <Grid x:Name="MyGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="32" />
                <RowDefinition Height="15" />
            </Grid.RowDefinitions>

            <pt:PageTransition Name="ptControl" TransitionType="Flip" Grid.Row="0">
                
            </pt:PageTransition>

